#include <stdio.h>

int main() {
    int idade, matricula;
    float altura;
    char nome [20];

    printf("Digite o nome do aluno: \n");
    scanf("%s", &nome);

    printf("Digite sua matrícula: \n");
    scanf("%d", &matricula);
    
    printf("digite sua idade: \n");
    scanf("%d", &idade);

    printf("digite sua altura: \n");
    scanf("%2.f", &altura);

    printf("cadastro de alunos: /n");
    printf("matrícula: \n", matricula);
    printf("Nome do aluno: \n", nome);
    printf("Idade: \n", idade);
    printf("altura: \n", altura);

    return 0;
}
